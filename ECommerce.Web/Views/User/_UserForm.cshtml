@model ECommerce.Web.Models.UserViewModel

<form id="userForm" asp-action="@(Model.Id == 0 ? "Create" : "Edit")" method="post">
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }
    @* @{
        var readonlyAttr = Model.Id != 0 ? "readonly" : "";
    } *@
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Username" class="form-label">Name</label>
        <input asp-for="Username" class="form-control" readonly="@(Model.Id != 0 ? "readonly" : null)" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    @if (Model.Id == 0){
    <div class="mb-3">
        <label asp-for="PasswordHash" class="form-label">Password</label>
        <input asp-for="PasswordHash" type="password" class="form-control" />
        <span asp-validation-for="PasswordHash" class="text-danger"></span>
        </div>
    }

    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" type="email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Phone" class="form-label">Phone</label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="form-check mb-2">
        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
        <label asp-for="IsActive" class="form-check-label">Is Active</label>
    </div>

    <div class="form-check mb-3">
        <input asp-for="IsCustomer" class="form-check-input" type="checkbox" disabled="@(Model.Id != 0)" />
        <label asp-for="IsCustomer" class="form-check-label">Is Customer</label>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
